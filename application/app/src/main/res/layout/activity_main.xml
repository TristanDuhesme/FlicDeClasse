<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tristanduhesme.flicdeclasse.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flicDeClasse"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:contentDescription="Logo de l\'application"
            android:src="@drawable/logoadmin" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--<TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/welcomeMessage"
                android:textAlignment="center"
                android:textColor="#112233"
                android:layout_weight="3"
                android:textSize="20dp" />
                -->
            <Button
                android:id="@+id/historiqueId"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:textSize="20dp"
                android:text="@string/historique" />
            <TableLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <Button
                        android:id="@+id/paramAlarmsId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textSize="17dp"
                        android:text="@string/paramAlarms" />
                    <Button
                        android:id="@+id/addNewFaceId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/addNewFace"
                        android:textSize="17dp"
                        android:layout_weight="6" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>